datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator prisma_client {
  provider = "prisma-client-js"
}
     
model Event {
  id             String   @id @default(cuid())
  title          String
  time           DateTime
  image          String
  location       Location @relation(fields: [locationId], references: [id])
  locationId     String
  availableSeats Seat[]
}

model Location {
  id      String  @id @default(cuid())
  city    String
  state   String
  country String
  Event   Event[]
}

model Seat {
  id    String  @id @default(cuid())
  event Event[]
}
